apiVersion: v1
kind: Service
metadata:
  name: ora-se-symposium-backend-service
  labels:
    app: $APP_NAME
spec:
  type: LoadBalancer
  ports:
  - port: 80
    protocol: TCP
    targetPort: 4000
  selector:
    app: $APP_NAME
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: ora-se-symposium-backend-service
spec:
  replicas: 4
  template:
    metadata:
      labels:
        app: $APP_NAME

    spec:
      imagePullSecrets:
      - name: $OCIR_SECRET_NAME
      containers:
      - name: $APP_NAME
        image: $PRIVATE_REGISTRY_PATH/$TENANCY_NAME/$REPO_NAME/$APP_NAME:${WERCKER_GIT_BRANCH}-${WERCKER_GIT_COMMIT}
        ports:
        - containerPort: 4000
          protocol: TCP
